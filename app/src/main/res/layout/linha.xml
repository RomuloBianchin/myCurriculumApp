<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:padding="6dp">

    <!--Criando o layout personalizado, sendo assim, todos os nossos
    itens da view irÃ£o receber essas caracteristicas.-->

    <ImageView
        android:id="@+id/imagemsListView"
        android:layout_width="70dp"
        android:layout_height="88dp"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/assuntoLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assunto"
            android:layout_marginStart="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"/>

        <TextView
            android:id="@+id/descricaoLista"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/descricao"
            android:layout_marginStart="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>

    </LinearLayout>


</LinearLayout>